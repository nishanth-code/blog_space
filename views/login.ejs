<%- include('./boilerplate/header.ejs') %> 
<body >
    <section class="h-screen bg-gradient-to-l from-sky-400 to-purple-600">
        <div class="px-6 h-full text-gray-800">
          <div
            class="flex xl:justify-center lg:justify-between justify-center items-center flex-wrap h-full g-6"
          >
            <div
              class="grow-0 shrink-1 md:shrink-0 basis-auto xl:w-6/12 lg:w-6/12 md:w-9/12 mb-12 md:mb-0"
            >
              <img
                src="https://source.unsplash.com/random/800Ã—534/?blog"
                class="w-full h-5/6 border-solid border-4 border-blue-300 rounded-3xl "
                alt="Sample image"
              />
            </div>
            <div class="xl:ml-20 xl:w-5/12 lg:w-5/12 md:w-8/12 mb-12 md:mb-0">
              <h1 class=" text-6xl text-center text-white font-serif hover:drop-shadow-2xl py-6 "> Hello Blogger!!</h1>

              <form action="/authenticate" method="post">
                <!-- Email input -->
                <div class="mb-6">
                  <input
                    type="text"
                    class="w-full px-4 py-2 text-xl font-normal text-gray-700  bg-white  border-solid border-4 border-blue-300 rounded-2xl"
                    id="exampleFormControlInput2"
                    placeholder="Enter Username"
                    name="username"
                  />
                </div>
      
                <!-- Password input -->
                <div class="mb-6">
                  <input
                    type="password"
                    class="w-full px-4 py-2 text-xl font-normal text-gray-700  bg-white  border-solid border-4 border-blue-300 rounded-2xl"
                    id="exampleFormControlInput2"
                    placeholder="Password"
                    name="password"
                  />
                </div>
      
      
                <div class="text-center lg:text-left px-36 ">
                  <button
                    type="submit"
                    class="inline-block px-28 py-3 bg-white-600 text-white border border-white font-medium text-sm leading-snug uppercase rounded shadow-md hover:bg-blue-400  hover:border-white  hover:text-white hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out"
                  >
                    Login
                  </button>
                  
               
                <p class="text-lg font-semibold mt-2 pt-1 mb-0">
                  Don't have an account?
                  <a
                    href="/signup"
                    class="text-green-600 hover:text-blue-700 focus:text-red-700 transition duration-200 ease-in-out"
                    >Register!!</a
                  >
                </p>
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>
</body>
</html>
